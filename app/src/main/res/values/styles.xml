<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorAccent">@color/start2</item>

        <!--di bawah ini baru semua-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- For Popup Menu -->
    <style name="PopupBelow" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/popup_below_in</item>
        <item name="android:windowExitAnimation">@anim/popup_below_out</item>
    </style>

    <style name="PopupAbove" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/popup_above_in</item>
        <item name="android:windowExitAnimation">@anim/popup_above_out</item>
    </style>

</resources>
