<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="4dp"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_background">

        <TextView
            android:id="@+id/popup_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:paddingTop="24dp"
            android:text="warning"
            android:textAllCaps="true"
            android:textColor="#FF333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popup_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popup_header"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="4sp"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:textColor="#FF424242"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/popup_footer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/popup_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_neutral"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_button"
                android:gravity="center"
                android:text="Okay"
                android:textColor="#FFD4444E" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/popup_footer"
            android:background="#FFEEEEEE" />
    </RelativeLayout>
</RelativeLayout>

